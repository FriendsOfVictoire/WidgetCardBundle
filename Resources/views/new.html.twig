{% extends 'VictoireCoreBundle:Widget:new.html.twig' %}

{% block form_static %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.themeCard) }}
            {{ (form.image is defined) ? form_row(form.image) }}
            {{ (form.legend is defined) ? form_row(form.legend) : "" }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.title) }}
            {{ form_row(form.shortDescription) }}
            {{ (form.date is defined) ? form_row(form.date) : "" }}
            {{ (form.cardType is defined) ? form_row(form.cardType) : "" }}
            {{ (form.popover is defined) ? form_row(form.popover) : "" }}
            {{ (form.price is defined) ? form_row(form.price) : "" }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.buttonText) }}
            {{ form_row(form.buttonIcon) }}
            {{ form_row(form.style) }}
            {{ form_row(form.style) }}
            {{ form_row(form.link) }}
            {{ form_widget(form.asynchronous) }}
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock form_static %}

{% block form_entity %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.themeCard) }}
            {{ (form.image is defined) ? form_row(form.image) }}
        </div>
        <div class="col-md-4">
            {{ (form.fields is defined) ? form_widget(form.fields) }}
            {{ (form.entity_proxy is defined) ? form_widget(form.entity_proxy) }}
            {{ form_widget(form.asynchronous) }}
        </div>
        <div class="col-md-4">
            {{form_rest(form)}}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock form_entity %}
